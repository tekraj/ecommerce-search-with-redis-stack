{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    "composite": false,
    "plugins": [{ "name": "react" }],
    "allowJs": true,
    "declaration": false,
    "declarationMap": false,
    "downlevelIteration": true,
    "incremental": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "noEmit": true,
    "strict": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "target": "es5"
  }
}
