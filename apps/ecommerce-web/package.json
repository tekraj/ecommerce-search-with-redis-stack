{
  "name": "ecommerce-web",
  "version": "0.1.0",
  "private": true,
  "homepage": "/ecommerce/",
  "scripts": {
    "build": "react-scripts build",
    "dev": "PORT=3001 react-scripts start",
    "eject": "react-scripts eject",
    "format": "prettier --write \"**/*.{ts,tsx,js,md,json}\"",
    "lint": "eslint 'src/**/*.{js,jsx,ts,tsx}'",
    "start": "npx serve build -p 3001  ",
    "test": "react-scripts test"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "extends": [
      "@ecommerce/eslint-config/react"
    ]
  },
  "dependencies": {
    "@heroicons/react": "^2.1.5",
    "@tanstack/react-query": "^5.51.16",
    "@types/react-slick": "^0.23.13",
    "axios": "^1.7.2",
    "flowbite-react": "^0.10.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.25.1",
    "react-scripts": "5.0.1",
    "react-slick": "^0.30.2",
    "slick-carousel": "^1.8.1",
    "use-debounce": "^10.0.2",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "@ecommerce/database": "1.0.0",
    "@ecommerce/eslint-config": "1.0.0",
    "@ecommerce/typescript-config": "1.0.0",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^20.12.3",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "serve": "^14.2.3",
    "tailwindcss": "^3.4.7",
    "typescript": "^5.2.2"
  }
}
